@page
@model IndexModel
@{
    ViewData["Title"] = ".NET TestWork";
}

<div class="text-center">
    <h1 class="display-4">Top scores!</h1>
</div>


<div style="color: #D8000C; background-color: #FFBABA">
   @Model.ErrorMessage
</div>

<form>
   <p>
      UserName: <input type="text" asp-for="SearchString" />
      <input type="submit" value="Filter" />
   </p>
</form>

<form method="post" asp-page-handler="Delete">
   <p>
      UserName: <input type="text" asp-for="Name" />
      <input type="submit" value="DeleteScores" />
   </p>
</form>

<form method="post" asp-page-handler="Add">
   <p>
      UserName: <input type="text" asp-for="NewName" />
      Score: <input type="text" asp-for="NewScore" />
      <input type="submit" value="AddScore" />
   </p>
</form>

<table class="table">
   <thead>
   <tr>
      <th>User Name</th>
      <th>Highscore</th>
   </tr>
   </thead>

   <tbody>

   @foreach (var scoreInfo in @Model.ScoreInfoList)
      {
         <tr>
            <td>@scoreInfo.Name</td>
            <td>@scoreInfo.Highscore</td>
         </tr>
      }
   </tbody>
</table>

